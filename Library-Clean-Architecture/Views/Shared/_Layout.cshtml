<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library_Clean_Architecture</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Library_Clean_Architecture.styles.css" asp-append-version="true" />
</head>
<body dir="rtl">
    <style>
        .input-search{
            background: rgba(0,0,0,0.1);
            color: #eee;
            outline: none;
            border: 1px solid #eee0;
            border-bottom: 1px solid #eee
        }
        .input-search::placeholder{
            color: rgba(255,255,255,0.8);
        }
    </style>
    <div class="container-fluid bg-dark text-center py-3">
        <div class="row d-flex flex-row justify-content-between">
            <div class="col-6 p-1">
                <form class="d-flex flex-row">
                    <input type="text" placeholder="جستجو کنید ...." class="input-search" />
                    <span>
                        <button class="btn btn-dark bg-gradient shadow text-light">جستجو</button>
                    </span>
                </form>
            </div>
            <div class="col-6 p-1 d-flex flex-row justify-content-end">
                <button class="btn text-primary">ورود</button>
                <button class="btn text-info">ثبت نام</button>
            </div>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Library_Clean_Architecture - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
